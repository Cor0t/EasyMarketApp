<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EasyMarketApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Estilo de los componentes -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>

    <!-- Estilo personalizado para botones -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilo personalizado para chips -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="chipStrokeColor">@color/primaryColor</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Estilo personalizado para cards -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>